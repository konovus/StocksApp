<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="stock"
            type="com.konovus.apitesting.data.local.entities.Stock" />
        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_stock_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="@{onClick}"
        android:padding="4dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{stock.name}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/price" />

        <TextView
            android:id="@+id/symbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:paddingVertical="8dp"
            android:textColor="@color/dark_gray"
            android:textAlignment="viewStart"
            android:text="@{stock.symbol}"
            tools:text="asads"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/change" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:text="@{String.valueOf(stock.price)}"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@{String.valueOf(stock.changePercent) + `%`}"
            android:textColor="@{ stock.change > 0 ? @color/green : @color/red_orange}"
            app:layout_constraintTop_toTopOf="@id/symbol"
            app:layout_constraintBottom_toBottomOf="@id/symbol"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/dark_lighter"
            app:layout_constraintTop_toBottomOf="@id/symbol" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
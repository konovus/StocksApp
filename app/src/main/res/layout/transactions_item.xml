<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="transactionData"
            type="com.konovus.apitesting.data.local.entities.Transaction" />
        <variable
            name="isBuy"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:padding="10dp">

        <TextView
            android:id="@+id/buy_sell_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@{ isBuy ? @color/green : @color/red_orange}"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/price_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{transactionData.orderType.toString()}"
            tools:text="BUY" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:text="@{`@` + String.valueOf(transactionData.price)}"
            app:layout_constraintEnd_toStartOf="@+id/amount_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buy_sell_label_tv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@143.50" />

        <TextView
            android:id="@+id/amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:text="@{'$' + String.valueOf(transactionData.amount)}"
            app:layout_constraintEnd_toStartOf="@+id/date_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/price_tv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="$100.00" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:text="@{transactionData.formattedDate}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/amount_tv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="27.08.22" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/dark_lighter"
            app:layout_constraintTop_toBottomOf="@id/date_tv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
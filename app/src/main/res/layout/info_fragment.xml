<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="selected"
            type="Integer" />
        <variable
            name="state"
            type="com.konovus.apitesting.ui.infoScreen.InfoScreenViewModel.InfoScreenStates" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_main">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="@{state.stock == null ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/top_wrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_blue"
                    android:paddingVertical="10dp"
                    android:visibility="@{state.stock == null ? View.INVISIBLE : View.VISIBLE}"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/back_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_round_arrow_back_ios_new_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/gray" />

                    <TextView
                        android:id="@+id/follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/follow_shape"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="@string/follow"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:drawableEnd="@{state.stock.isFavorite ? @drawable/ic_star : @drawable/ic_star_outline}"
                        app:drawableTint="@color/gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/back_arrow" />

                    <TextView
                        android:id="@+id/symbol_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/ubuntu_medium"
                        tools:text="AAPL"
                        android:text="@{state.stock.symbol}"
                        android:textColor="@color/gray"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/back_arrow" />

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textColor="@color/gray_600"
                        android:textSize="17sp"
                        android:text="@{state.stock.name}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/symbol_tv"
                        app:layout_constraintTop_toBottomOf="@id/symbol_tv"
                        tools:text="Apple" />

                    <TextView
                        android:id="@+id/price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/gray"
                        android:textSize="32sp"
                        app:layout_constraintStart_toStartOf="@id/symbol_tv"
                        app:layout_constraintTop_toBottomOf="@id/name_tv"
                        android:text="@{`$` + state.stock.price}"
                        tools:text="$152.04" />

                    <TextView
                        android:id="@+id/price_change_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@{state.stock.chartChange.change > 0 ? @color/green : @color/red_orange}"
                        android:textSize="20sp"
                        android:text="@{state.stock.chartChange.change > 0 ?  `+$` + state.stock.chartChange.change + `(` + state.stock.chartChange.changePercent + `%)` : `-$` + String.valueOf(state.stock.chartChange.change).substring(1) + `(` + String.valueOf(state.stock.chartChange.changePercent).substring(1) + `%)`}"
                        app:layout_constraintStart_toStartOf="@id/symbol_tv"
                        app:layout_constraintTop_toBottomOf="@id/price_tv"
                        tools:text="+$5.02(3.54%)" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="30dp"
                        android:visibility="@{state.chartLoading ? View.INVISIBLE : View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/price_change_tv"/>
                    <TextView
                        android:id="@+id/mp_marker_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:elevation="100dp"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:background="@drawable/bg_chart_value_shape"
                        android:fontFamily="@font/ubuntu_regular"
                        android:textColor="@color/gray"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ProgressBar
                        android:id="@+id/progress_chart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:visibility="@{state.chartLoading ? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintBottom_toBottomOf="@id/chart"
                        app:layout_constraintEnd_toEndOf="@id/chart"
                        app:layout_constraintStart_toStartOf="@id/chart"
                        app:layout_constraintTop_toTopOf="@id/chart" />


                    <LinearLayout
                        android:id="@+id/timespans_wrap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/chart">

                        <include
                            layout="@layout/time_span_graph_item"
                            app:selected="@{selected == 0}"
                            app:timeSpan="@{`1D`}" />

                        <include
                            layout="@layout/time_span_graph_item"
                            app:selected="@{selected == 1}"
                            app:timeSpan="@{`1W`}" />

                        <include
                            layout="@layout/time_span_graph_item"
                            app:selected="@{selected == 2}"
                            app:timeSpan="@{`1M`}" />

                        <include
                            layout="@layout/time_span_graph_item"
                            app:selected="@{selected == 3}"
                            app:timeSpan="@{`6M`}" />

                        <include
                            layout="@layout/time_span_graph_item"
                            app:selected="@{selected == 4}"
                            app:timeSpan="@{`1Y`}" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottom_wrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/dark_blue"
                    android:visibility="@{state.stock == null ? View.INVISIBLE : View.VISIBLE}"
                    app:layout_constraintTop_toBottomOf="@id/top_wrap">

                    <ProgressBar
                        android:id="@+id/progress_tabs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:visibility="invisible"
                        android:indeterminate="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/no_transactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="No Transactions"
                        android:textColor="@color/dark_gray"
                        android:textSize="20sp"
                        android:visibility="@{state.transactions.isEmpty() &amp;&amp; state.tabNr == 2 ? View.VISIBLE: View.INVISIBLE}"
                        android:layout_marginTop="100dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <include
                        android:id="@+id/tab_layout"
                        layout="@layout/tab_layout_info_fragment"
                        app:layout_constraintTop_toTopOf="parent" />

                    <include layout="@layout/statistics_tab_page"
                        android:id="@+id/statistics_tab"
                        app:stock="@{state.stock}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="@{state.tabNr == 0 ? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/tab_layout" />

                    <include layout="@layout/description_tab_page"
                        android:id="@+id/description_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="@{state.tabNr == 1 ? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/tab_layout"
                        app:stock="@{state.stock}"
                        />

                    <include layout="@layout/transactions_tab_page"
                        android:id="@+id/transactions_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="@{state.tabNr == 2 ? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/tab_layout"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
            android:id="@+id/trade_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="15dp"
            android:text="@string/trade"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/bg_main"
            android:fontFamily="@font/ubuntu_bold"
            android:background="@drawable/rounded_25_shape"
            app:backgroundTint="@color/green"
            android:visibility="@{state.stock == null ? View.INVISIBLE : View.VISIBLE}"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</layout>
